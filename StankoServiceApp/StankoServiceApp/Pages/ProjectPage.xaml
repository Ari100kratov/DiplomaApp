<Page
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:StankoServiceApp"
      xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid" x:Class="StankoServiceApp.ProjectPage"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800" Background="White"
      Title="ProjectPage">

    <Grid>

        <dxg:GridControl x:Name="gcProject" AutoGenerateColumns="AddNew" EnableSmartColumnsGeneration="True" SelectionMode="Row" ShowLoadingPanel="True">
            <dxg:GridControl.View>
                <dxg:TableView AllowPerPixelScrolling="True" ShowTotalSummary="True" AllowEditing="False" ShowAutoFilterRow="True" ShowFilterPanelMode="ShowAlways" ShowSearchPanelMode="Always" ShowSearchPanelMRUButton="True" ShowSearchPanelNavigationButtons="True"/>
            </dxg:GridControl.View>
            <dxg:GridColumn Header="Наименование" FieldName="Column1" SortOrder="Ascending" SortIndex="0"/>
            <dxg:GridColumn Header="Дата начала" FieldName="Column1" SortOrder="Ascending" SortIndex="1"/>
            <dxg:GridColumn Header="Дата завершения" FieldName="Column1" SortOrder="Ascending" SortIndex="2"/>
            <dxg:GridColumn Header="Рукводитель" FieldName="Column1" SortOrder="Ascending" SortIndex="3"/>
            <dxg:GridColumn Header="Статус" FieldName="Column1" SortOrder="Ascending" SortIndex="4"/>
            <dxg:GridColumn Header="Заказчик" FieldName="Column1" SortOrder="Ascending" SortIndex="5"/>
            <dxg:GridColumn Header="Скачать ТЗ" FieldName="Column1" SortOrder="Ascending" SortIndex="6"/>
        </dxg:GridControl>
    </Grid>
</Page>
